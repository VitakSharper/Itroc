@model Web.ITroc.Core.ViewModels.Identity.RegisterViewModel
@{
    ViewBag.Title = "S’inscrire";
}

<div class="container">
    <div class="row">
        <div class="card bg-light">
            <article class="card-body mx-auto" style="max-width: 400px;">
                <h4 class="card-title mt-3 text-center">Créez un compte</h4>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })


                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-user-circle"></i> </span>
                        </div>
                        @Html.TextBoxFor(m => m.Nom, new { @class = "form-control", placeholder = "Nom" })
                        @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control", placeholder = "Prenom" })
                    </div>

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="far fa-address-card"></i> </span>
                        </div>
                        @Html.TextBoxFor(m => m.Adresse, new { @class = "form-control", placeholder = "Adresse" })
                    </div>

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="far fa-address-card"></i> </span>
                        </div>
                        @Html.TextBoxFor(m => m.Ville, new { @class = "form-control", placeholder = "Ville" })
                        @Html.TextBoxFor(m => m.CodePostal, new { @class = "form-control", placeholder = "Code Postale" })
                    </div>

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="far fa-envelope"></i> </span>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-user-lock"></i> </span>
                        </div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mot de Passe" })
                    </div>

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-user-lock"></i> </span>
                        </div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmer le mot de passe" })
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-primary waves-effect"> S’inscrire  </button>
                        </div>
                    </div>

                    <p class="text-center">Déjà inscrit ? Connectez-vous ici ! <a href="">Se connecter</a> </p>
                }
            </article>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
