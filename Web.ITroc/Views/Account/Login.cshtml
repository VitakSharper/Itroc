@using Web.ITroc.Core.ViewModels.Identity
@model Web.ITroc.Core.ViewModels.Identity.LoginViewModel


<div class="row">
    <div class="card view overlay hoverable col-lg-4 offset-4 bg-light">
        <h5 class="card-header info-color white-text text-center py-4">
            <strong>Se connecter</strong>
        </h5>
        <div class="card-body">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "text-center", role = "form", @style = "color: #757575;" }))
            {
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group md-form">
                    @Html.LabelFor(m => m.Email)

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "materialLoginFormEmail" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                </div>

                <div class="form-group md-form">
                    @Html.LabelFor(m => m.Password)

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "materialLoginFormPassword" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-around">
                    <div>
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", @id = "materialLoginFormRemember" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label", @for = "materialLoginFormRemember" })
                        </div>
                    </div>
                    <div>
                        <!-- Forgot password -->
                        <a href="">Mot de passe oublié?</a>
                    </div>
                </div>



                <input type="submit" value="Connexion" class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" />

                <p>
                    @Html.ActionLink("S'inscrire comme nouvel utilisateur", "Register")
                </p>
                @* Activer ceci une fois que la confirmation de votre compte est activée pour la fonctionnalité de réinitialisation du mot de passe
                    <p>
                        @Html.ActionLink("Vous avez oublié votre mot de passe ?", "ForgotPassword")
                    </p>*@
            }
        </div>
    </div>

    @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}